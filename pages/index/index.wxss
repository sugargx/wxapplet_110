/*tab切换  */
.nav{
  max-width: 720rpx;
  height:100rpx;
  display:flex;
  flex-direction:row;
}
.default{
  line-height:100rpx;
  text-align:center;
  flex:1;
  border-bottom:1px solid gainsboro;
  color:#999;
  font-weight:bold;
  font-size:35rpx;
  width:260rpx;
  transition: 1s; 
}
.red{
  line-height:100rpx;
  text-align:center;
  color:#000;
  flex:1;
  border-bottom:1px solid gainsboro;
  font-weight:bold;
  font-size:35rpx;
  width:260rpx;
  transition: 1s;
}
.show{
  display:block;
  text-align:center;
  line-height:200rpx;
}
.hidden{
  display:none;
  text-align:center;
  line-height:200px;
}

.ways{
  background: #d4d0d1;
  margin: 40rpx;
  border-radius: 500rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.image{
  width: 40rpx;
  height: 40rpx;
  /*相对自己默认的位置  */
  position:relative;
  left: 15rpx;
  top: 5rpx;
  margin-right: 25rpx;
}
